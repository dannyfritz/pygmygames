{
  "extends": ["xo-react", "plugin:jest/recommended", "plugin:jest/style"],
  "ignores": [
    "**/vite-env.d.ts",
		"react-client",
		"packages/engine",
		"packages/renderer"
  ],
	"overrides": [
		{
			"files": ["**/*.ts"],
			"rules": {
				"@typescript-eslint/consistent-indexed-object-style": ["error", "index-signature"]
			}
		}
	],
	"plugins": ["jest"],
	"rules": {
		"import/no-extraneous-dependencies": "off"
	},
	"prettier": true
}
